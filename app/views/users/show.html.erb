<div class="container">
	<div class="row">
		<div class="col-sm-3 mt-4">
			<h1 style="font-size: 40px"> Profile   <small><%= link_to 'Edit', edit_user_registration_path, class: 'btn btn-primary' %></small> </h1>
			<hr/>
			<h3 style="font-size: 30px;"> Name: <small class="text-info"><%= @user.name %></small> </h3>
			<%= cl_image_tag(@user.profile_image, :width => 300, :height => 300, class: 'profile') %>
			<h3 style="font-size: 30px;"> Email: <small class="text-info"><%= @user.email %></small> </h3>
			<h3 style="font-size: 30px;"> Contact Number: <small class="text-info"><%= @user.contact_number %></small> </h3>
		</div>
	</div>
</div>
<hr/>
<div class="container">
	<div class="row">
		<div class="col-sm-3 mt-4">
			<h1 style="font-size: 40px;">My Products:
					<span><%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %></span>
			</h1>
		</div>
	</div>
	<div class="row">
			<% @product.each do |product| %>
						<div class="col-sm-3 mt-4">
							<div class="card-group">
								<div class="card">
								  <%= cl_image_tag(product.product_image, class: "card-img-top img-fluid") %>
								  <hr/>
				  					<div class="card-body">
				  					    <h5 class="card-title"><%= product.name%></h5>
										    <p class="card-text"><%= truncate(product.description, :length => 100, :separator => ' ') %></p>
										    <%= link_to 'Edit' , edit_product_path(product), class: "btn btn-primary" %>
										    <%= link_to 'Delete' , product_path(product), method: :delete,
				      data: { confirm: 'Are you sure you want to delete this?' }, class: "btn btn-primary" %>
										</div>
								</div>
							</div>
						<br/>
						</div>
			<% end %>
		</div>
</div>

