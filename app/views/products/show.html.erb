<div class="container-fluid">
	<div class="row">
		<div class="col-sm-5 offset-sm-1 mt-4" style="border: 1px solid black" >
				<h1 style="font-size: 50px"> Product name: </h1>
				<p class="text-primary" style="font-size: 30px"><%=@product.name %></p>
				<%= cl_image_tag(@product.product_image, class: "img-fluid showPic") %>
				<h3 style="font-size: 40px"> Product Description: </h3>
				<p style="font-size: 30px"> <%=@product.description%></p>
		</div>

		<div class="col-sm-5 mt-4 ml-3" style="border: 1px solid black" >
				<h1>Supplier's name:</h1>
				<p style="font-size: 20px"> <%=@user.name %></p>
				<h1>Price:</h1>
				<p style="font-size: 20px"> <%=@product.price %></p>
				<h1>Preferred Location for Meetup: </h1>
				<p style="font-size: 20px"> <%= @product.meetup_location %>
				<h1>Availability: </h1>
				<% if @product.availability_status == true %>
						<p class="text-success" style="font-size: 20px">Current have stock </p>
				<% else %>
						<p class="text-danger" style="font-size: 20px">Out of stock</p>
				<%end%>
				<% if @product.user_id != current_user.id %>
			    	<%= link_to 'Cart' , product_sessions_path(@product), class: "btn btn-primary" %>
			    	<%= link_to like_product_path(@product), method: :put do %>
			    			Upvote
			    			<%= @product.get_upvotes.size %>
			    	<% end %>
				<% else %>
			    	<%= link_to 'Edit' , edit_product_path(@product), class: "btn btn-primary" %>
			    	<%= link_to 'Delete' , product_path(@product), method: :delete,
data: { confirm: 'Are you sure you want to delete this?' }, class: "btn btn-primary" %>
				<% end %>
		</div>
	</div>
</div>