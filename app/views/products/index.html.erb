<div class="container-fluid">
	<div class="col-sm-3 mt-4">
  		<h1 style="font-size: 40px"> Products </h1>
  		<hr/>
  </div>
	<div class="row">
			<% @products.each do |product| %>
						<div class="col-sm-3 mt-4">
							<div class="card-group">
								<div class="card">
								  <%= cl_image_tag(product.product_image, class: "card-img-top img-fluid") %>
								  <hr/>
				  					<div class="card-body">
				  							<%= link_to product.name, product_path(product), class: "card-title text-info h3" %>
										    <p class="card-text"><%= truncate(product.description, :length => 100, :separator => ' ') { link_to "read more", product_path(product.id) } %></p>
										    <% if product.user_id != current_user.id %>
										    		<p class="font-italic font-weight-bold">Check out the product by clicking on it's name </p>
										    <% else %>
												    <%= link_to 'Edit' , edit_product_path(product), class: "btn btn-primary" %>
												    <%= link_to 'Delete' , product_path(product.id), method: :delete,
						      data: { confirm: 'Are you sure you want to delete this?' }, class: "btn btn-primary" %>
						     				<% end %>
										</div>
								</div>
							</div>
						<br/>
						</div>
			<% end %>
	</div>
</div>