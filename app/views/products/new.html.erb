<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-1 mt-4">
			<h1> Create new product</h1>
			<%= form_with scope: :product, url: products_path(@user), local: true do |form| %>
				<p>
					<%= form.label :name, class: 'h3'%><br>
					<%= form.text_field :name, class: 'form-control'%>
				</p>

				<p>
					<%= form.label :product_image, class: 'h3' %><br>
					<%= form.file_field :product_image, class: 'form-control'%>
				</p>
				<p>
					<%= form.label :description, class: 'h3' %><br>
					<%= form.text_area :description, class: 'form-control' %>
				</p>
				<p>
					<%= form.label :price, class: 'h3' %><br>
					<%= form.number_field :price, class: 'form-control' %>
				</p>
				<p>
					<%= form.label :preferred_meetup_location, class: 'h3' %><br>
					<%= form.text_field :meetup_location, class: 'form-control' %>
				</p>
				<p>
					<%= form.label :availability_status, class: 'h3' %><br>
					<%= form.select :availability_status, ['Have Stock', 'Out of Stock'], class: 'form-control'%>
				</p>

				<p>
					<%= form.hidden_field :user_id, value:@user.id %>
					<%= form.submit :class => "btn btn-info"%>
				</p>
			<% end %>
		</div>
	</div>
</div>