<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 offset-sm-1 mt-4">
			<h1>Cart Items</h1>
			<% if current_user %>
				<table class="table">
			  	<thead>
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">Name</th>
				      <th scope="col">Price</th>
				      <th scope="col">Seller</th>
				    </tr>
			  	</thead>
			  	<tbody>
			  		<% @num = 0 %>
							<% @productSession.each do |product| %>
									<% @num += 1 %>
									<tr>
							      <th scope="row"><%= @num%></th>
							      <td><%= product.name%></td>
							      <td><%= product.price%></td>
						      	<td><%= @user.name %></td>
										<td><%= link_to 'Checkout', new_product_order_path(product.id), class: "btn btn-primary" %></td>
							    </tr>
							<% end %>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>
