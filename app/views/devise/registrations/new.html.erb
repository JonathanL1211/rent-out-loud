<!--Sign Up Page -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<div class="container">
		<h2 class="display-4">Sign up</h2>
	  <div class="form-group">
	    <%= f.label :name , class: 'h3'%><br />
	    <%= f.text_field :name, class: 'form-control',autofocus: true, autocomplete: "name" %>
	  </div>
	  <div class="form-group">
	    <%= f.label :contact_number, class: 'h3' %><br />
	    <%= f.phone_field :contact_number, class: 'form-control', autofocus: true, autocomplete: "contact_number" %>
	  </div>
    <div class="form-group">
      <%= f.label :email, class: 'h3' %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'h3' %>
      <% if @minimum_password_length %>
      	<em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'h3' %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
    	<%= f.label :profile_image, class: 'h3' %>
    	<%= f.file_field :profile_image, class: 'form-control',autocomplete: "profile_image" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", {class: "btn btn-primary"}%>
    </div>
		<br/>
    <%= render "devise/shared/links" %>
	</div>
<% end %>





