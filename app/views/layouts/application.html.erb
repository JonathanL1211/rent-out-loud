<!DOCTYPE html>
<html>
  <head>
    <title>RentOutLoud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  	  <a class="navbar-brand" href="/">RENT OUT LOUD</a>
  	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  	    <ul class="navbar-nav mr-auto">
  	      <li class="nav-item active">
  	        <a class="nav-link" href="#">About Us </a>
  	      </li>
  	      <li class="nav-item">
  	        <a class="nav-link" href="#">My Orders</a>
  	      </li>
  	      <% if !user_signed_in? %>
  	      	<li class="nav-item">
  	      	  <a class="nav-link" href="/users/sign_up">Sign Up</a>
  	      	</li>
  	      	<li>
  	      		<a class="nav-link" href="/users/sign_in">Sign In</a>
  	      	</li>
  	      <% else %>
  	      	<li>
  	      		<%= link_to 'My Profile', user_path(current_user.id), class: 'nav-link'%>
  	      	</li>
  	      	<li>
	  	      	<%= link_to 'Logout', destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure?'}, class: 'nav-link' %>
	  	      </li>
  	      <% end %>
  	    </ul>

  	    <form class="form-inline my-2 my-lg-0">
  	      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
  	      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  	    </form>
  	  </div>
  	</nav>

  	<p class="notice" style="display:none;"><%= notice %></p>
  	<p class="alert" style="display:none;"><%= alert %></p>
    <%= yield %>
  </body>
</html>
