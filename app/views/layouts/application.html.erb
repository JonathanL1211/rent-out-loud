<!DOCTYPE html>
<html>
  <head>
    <title>RentOutLoud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.0/dist/semantic.min.css"></link>
  </head>

  <body>
	<div class="ui menu">
		  <a class="active item">
		    RENT-OUT-LOUD
		  </a>
		  <a class="item">
		    About Us
		  </a>
		  <a class="item">
		    Products
		  </a>
		  <div class="right menu">
		    <div class="item">
		      <div class="ui icon input">
		        <input type="text" placeholder="Search...">
		        <i class="search link icon"></i>
		      </div>
		    </div>
  			<% if !user_signed_in? %>
			    <a class="ui item" href="/users/sign_up">
			      Sign Up
			    </a>
			  <% else %>
				  <a class="ui item" href="/users/sign_up">
				    Profile
				  </a>
				  <a class="ui item" data-confirm="Are you sure?" data-method="delete" href="/users/sign_out">
				    Logout
				  </a>
			  <% end %>
		  </div>
	</div>

  	<p class="notice" style="display:none;"><%= notice %></p>
  	<p class="alert" style="display:none;"><%= alert %></p>

    <%= yield %>
  </body>
</html>
